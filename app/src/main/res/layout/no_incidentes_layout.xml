<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/fondo_incidente"
    android:orientation="horizontal"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="5dp"
    android:weightSum="10"
    android:id="@+id/no_incidentes">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="desc"
            android:gravity="center"
            android:src="@drawable/ic_incident" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/letra_incidentevista"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:typeface="normal"
            android:text="NO HAY INCIDENTES EN LAS CERCANÍAS"/>

        <TextView
            android:id="@+id/subtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/letra_incidentevista"
            android:text="Puede revisar su radio de búsqueda"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/lbl_eyes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/letra_incidentevista"
            android:textSize="12sp"
            android:gravity="center"
            android:typeface="normal" />

        <TextView
            android:id="@+id/lbl_distancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/letra_incidentevista"
            android:gravity="center"
            android:paddingTop="10dp"/>


    </LinearLayout>

</LinearLayout>