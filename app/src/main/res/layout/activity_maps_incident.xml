<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="50"
    android:background="@color/fondo_header">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:context="com.example.negro.firstmvp.MapsIncidentActivity"
        android:layout_weight="44"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/fondo_header">

        <Button
            android:id="@+id/btn_volver_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FIJAR"
            android:background="@drawable/map_button"
            style="@style/button_map_text"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/fondo_header">
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_radio"
            android:textColor="@color/color_txt_loading"/>

        <TextView android:id="@+id/txt_radio_view"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt_loading"
            android:text=""/>

    </LinearLayout>



    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/seekBar"
        android:layout_margin="10dp"
        android:progress="100"
        android:max="5000"
        android:layout_weight="3"
        />



</LinearLayout>