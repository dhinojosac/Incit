<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3CA8DF" />
            <stroke android:width="1dp" android:color="#ff389dd1" />
            <corners android:radius="0dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#ff3ba5db" android:startColor="#ff3375d1" />
            <stroke android:width="1dp" android:color="#ff3696c9" />
            <corners android:radius="0dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>